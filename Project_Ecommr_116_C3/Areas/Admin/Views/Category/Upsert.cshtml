@model Project_Ecommr_116_C3.Models.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Category" : "New Category";
    var saveUpdate = Model.Id != 0 ? "Update" : "Save";
}

<form method="post">
    <div class="row">
        <div class="col-10 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="@Model.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Name" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group row m-2 p-2" >
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBAckToListButton" />
                    }
                </div>

            </div>
        </div>
        </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
